<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td scope="row"><%= product %></td>
        <td scope="row">â‚¹<%= product.price %></td>
        <td scope="row"><%= button_to "Buy Now", checkout_create_path, params: { id: product.id }, remote: true, class: "btn btn-success" %></td>
        <td scope="row"><%= link_to 'Show', product, class: "btn btn-info" %></td>
        <td scope="row"><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %></td>
        <td scope="row"><%= link_to 'Destroy', product, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

